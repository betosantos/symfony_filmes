{% extends 'admin/adminbase.html.twig' %}

{% block title %}Filme
{% endblock %}

{% block content %}
	<div
		class="content-wrapper mt-3">
		<!-- Main content -->
		<section
			class="content">
			<!-- Default box -->
			<div class="card">
				<div class="card-header">
					<h3 class="card-title">Detalhes do Filme</h3>

					<div class="card-tools">
						<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
							<i class="fas fa-minus"></i>
						</button>
						<button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
							<i class="fas fa-times"></i>
						</button>
					</div>
				</div>
				<div class="card-body">

					<div class="container">
						<div class="row">

							<div class="col-4">								
								{% if(filme.foto == null) %}
									<img src="{{ asset('imagens/semfoto.png') }}" width="150" heigth="150">
								{% else %}
									<img src="{{ asset('uploads/filmes/' ~ filme.foto) }}" width="150" heigth="150">
								{% endif %}
							</div>
							<div class="col-8">
								<div class="mb-3">
									<label for="titulo" class="form-label">Título do Filme</label>
									<input class="form-control" id="titulo" name="titulo" type="text" placeholder="Título do Filme" aria-label="Titulo do Filme" value="{{ filme.titulo }}">
								</div>

								<div class="mb-3">
									<label for="titulo" class="form-label">Categoria</label>
									<input class="form-control" id="categoria" name="categoria" type="text" placeholder="Título do Filme" aria-label="" value="{{ filme.categoria.nome }}">
								</div>

								<div class="mb-3">
									<label for="descricao" class="form-label">Descrição</label>
									<textarea class="form-control" id="descricao" name="descricao" rows="3">{{ filme.descricao }}</textarea>
								</div>

								<div class="float-right">
									<a href="{{ path('admin_filmes') }}"><button class="btn btn-primary mt-2">{{ button_label|default('Voltar') }}</button></a>
								</div>

							</div>

						</div>
					</div>

				</div>
			</div>
			<!-- /.card -->
		</section>
		<!-- /.content -->
	</div>
{% endblock %}
